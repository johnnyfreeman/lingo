*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

// disable text selection
body
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

/* removes dotted line */
a:active, a:focus, input, textarea
  outline-style none 
  -moz-outline-style none

html, body
  height 100%

body
  background-color white
  color #575757
  font-family 'Segoe UI', Arial, sans-serif

h1
  font-size 14px
  margin-top 0

p
  font-size 12px
  margin 0
  margin-top 10px

h1 small.date
  color #919599
  font-size 12px
  font-weight normal
  float right
  text-decoration none

form
  margin 0

.pull-right
  float right

.hidden
  display none

.truncate
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

/* layout columns */
.layout-column
  float left
  position relative

/* Scroll box */
.scroll
  overflow-y hidden

.scroll:hover
  overflow-y scroll

#container
  background-color #fff
  overflow hidden /* contains floats */
  width 794px

#right .scroll 
  height 466px

/* Left Column */
#left
  background-color #2C3039
  height 591px
  width 70px /*200*/

/* Right Column */
#right
  width 724px /*594*/
  background-color #F9FAFC

/* override the default animation speed for all animations */
.animated
  /* fadeIn animation speed */
  -webkit-animation-duration .3s
  -moz-animation-duration .3s
  -ms-animation-duration .3s
  -o-animation-duration .3s
  animation-duration .3s

/* ------ POPUPS ------ */
.popup
  position absolute
  font-size 14px
  background-color white
  border-radius 4px
  box-shadow 0 0px 8px rgba(0,0,0,0.3)
  display none

/* popup arrows */
.popupbefore, .popupafter
  position absolute
  display inline-block
  border-color transparent
  border-style solid
  content ""

/* arrow shadow */
.popupbefore
  margin-top -8px
  top 1px
  left 10px
  border-bottom-color #d1d4d7
  border-width 0 7px 7px 7px

/* arrow */
.popupafter
  margin-top -7px
  top 1px
  left 11px
  border-bottom-color #fff
  border-width 0 6px 6px 6px

.popup-title,
.popup-section
  padding 10px 15px
  min-width 250px

.popup-title
  cursor default

.popup-section
  border-top 1px solid #EBEEF5

.no-padding
  padding 0

.loading
  background-color #fff
  color #545454
  font-size 20px
  padding 20px
  text-align center

.menu
  list-style none
  margin-top 0
  margin-bottom 0
  padding-left 0
  width 70px

  li
    display inline

  a
    border-bottom 1px solid #343843
    color #7D869B
    display block
    font-size 18px
    padding 20px 26px
    text-decoration none
    text-align center

    &:hover
      color white

  &.bottom
    position absolute
    bottom 0
    left 0

    a
      border-bottom 0
      border-top 1px solid #343843



.badge
  background-color #3CC5F1
  border-radius 10px
  color #fff
  font-size 12px
  font-weight bold
  padding 2px 6px


